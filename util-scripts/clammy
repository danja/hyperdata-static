# dev
echo scanning etc  > /var/log/clamav/clamscan.log
clamscan /etc -v --log=/var/log/clamav/clamscan.log
echo scanning home 
clamscan /home -v --log=/var/log/clamav/clamscan.log
# lib
# lib32
# lib64
# libx32
# lost+found
# media
